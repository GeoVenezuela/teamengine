<?xml version="1.0" encoding="utf-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 
	                    http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>ctl-dir</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>src/ctl</directory>
      <outputDirectory>${artifactId}/ctl</outputDirectory>
      
    </fileSet>
    <fileSet>
      <directory>src/data</directory>
      <outputDirectory>${artifactId}/data</outputDirectory>
      
    </fileSet>
    <fileSet>
      <directory>src/resources</directory>
      <outputDirectory>${artifactId}/resources</outputDirectory>
      
    </fileSet>
    
     <fileSet>
      <directory>src/web</directory>
      <outputDirectory>${artifactId}/web</outputDirectory>
      
    </fileSet>
   
   
  </fileSets>
  <files>
    <file>
      <source>src/config.xml</source>
      <outputDirectory>${artifactId}</outputDirectory>
    </file>
  </files>
</assembly>
