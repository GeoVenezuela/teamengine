<?xml version="1.0" encoding="UTF-8"?>
<ctl:package
 xmlns="http://www.occamlab.com/ctl"
 xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
 xmlns:ctl="http://www.occamlab.com/ctl"
 xmlns:parsers="http://www.occamlab.com/te/parsers"
 xmlns:myparsers="http://teamengine.sourceforge.net/parsers"
 xmlns:saxon="http://saxon.sf.net/"
 xmlns:csw="http://www.opengis.net/cat/csw"
 xmlns:xi="http://www.w3.org/2001/XInclude"
 xmlns:xsd="http://www.w3.org/2001/XMLSchema"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://www.occamlab.com/ctl ../../../../../apps/engine/resources/com/occamlab/te/schemas/ctl.xsd">

	<test name="csw:discovery.csw.getrecords.3">
      <param name="csw.GetRecords.post.url"/>
      <assertion>The outputFormat must be a valid MIME type, and must at least support 'application/xml'.  When it is 'application/xml' it must validate against the schemas in the xsi:schemaLocation element.</assertion>
      <comment>This test issues a GetRecords request using HTTP POST to the CSW server under test. The outputFormat is set to 'application/xml' and the result should be of this output type and valid.</comment>
      <link>OGC 04-021r3, 10.8.4.3, p. 135</link>
		<code>
		
			<xsl:variable name="request1">
				<request>
					<url>
						<xsl:value-of select="$csw.GetRecords.post.url"/>
					</url>
					<method>post</method>
					<body><![CDATA[
<csw:GetRecords resultType="results" outputSchema="http://www.opengis.net/cat/csw" xmlns:csw="http://www.opengis.net/cat/csw" outputFormat="application/xml">
	<csw:Query typeName="csw:Record"/>
</csw:GetRecords>
					]]></body>
					<parsers:HTTPParser/>
				</request>
			</xsl:variable>
			
			<xsl:if test="not($request1/*)">
				<ctl:fail/>
			</xsl:if>

			<xsl:if test="$request1/*">
				<xsl:variable name="expression">//csw:GetRecordsResponse</xsl:variable>
				<ctl:call-test name="ctl:assert-xpath">
					<ctl:with-param name="expr" select="$expression"/>
					<ctl:with-param name="doc" select="$request1//content/*"/>
				</ctl:call-test>

				<ctl:call-test name="ctl:XMLValidatingParser.CSW">
						<ctl:with-param name="doc"><xsl:copy-of select="$request1//content/*"/></ctl:with-param>
				</ctl:call-test>			
			
				<xsl:variable name="content-type" select="$request1/response/headers/header[@name='Content-Type']"/>
				<xsl:if test="not($content-type = 'application/xml')">
					<ctl:fail/>
				</xsl:if>								
			</xsl:if>
				
			<!--TODO: Another test(s) for "plain/txt" and others?-->
				
		</code>
	</test>
</ctl:package>
